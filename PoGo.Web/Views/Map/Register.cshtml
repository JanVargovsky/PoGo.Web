@model PoGo.Web.Models.MapModels.MapRegistrationModel
@{
    ViewData["Title"] = "Registrace";
}
<div class="alert alert-danger" role="alert">
    Do popisu k platbě připište uživatelské jméno k mapě nebo přezdívku na Discordu. Jinak <strong>nebude účet založen</strong>. Účty očekávejte aktivní do jednoho dne od obdržení platby.
</div>

<h2>Registrace</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <select asp-for="City" asp-items="Model.Cities" class="form-control"></select> 
            </div>

            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Uživatelské jméno" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" placeholder="Heslo"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DiscordUsername" class="control-label"></label>
                <input asp-for="DiscordUsername" class="form-control" />
                <span asp-validation-for="DiscordUsername" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary pull-right">Odeslat</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
